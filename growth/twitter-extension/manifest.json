{
    "manifest_version": 3,
    "name": "Sentio Quick Reply",
    "version": "1.0",
    "description": "Quick reply to tweets with promotional content",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "https://twitter.com/*",
        "https://x.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://twitter.com/*",
                "https://x.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "icons": {
        "48": "icon.png"
    }
}